#include <iostream> 

#include <string.h> 

using namespace std;

struct  strc

{   

    string naim; 
    
    int kolv; 
    
    int zena;   
    
}  mtovar[100];  

int  main () 

{     

    int nst, i, j; 
    
    cout << "Vvedite kol-vo tovarov:" << endl;  
    
    cin >> nst; 
    
   for  (i=0; i < nst; i++) 
   
   {   
   
        cout << "Vvedite naumenovanie: ";  
        
        cin >> mtovar[i].naim; 
        
        cout << "Vvedite kol-vo: ";  
        
        cin >> mtovar[i].kolv; 
        
        cout << "Vvedite zenu" << endl;
        
        cin >> mtovar[i].zena; 
        
   }
   
   for(i=0;i<nst;i++)
   
   {
   
       if(mtovar[i].kolv*mtovar[i].zena>=100000)
       
       {
       
           cout<<mtovar[i].naim<<endl;
           
       }
       
   }
   
}

