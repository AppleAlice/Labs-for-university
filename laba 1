#include <iostream.h>

#include <math.h>

int main ()

{

 double x,y,z,a,b,c,s;
 
cout << "Vvedite x: ";

 cin >> x;
 
cout << "Vvedite y: ";

 cin >> y;
 
cout << "Vvedite z: ";

 cin >> z;
 
 a = 2*cos(x-2/3);
 
 b = 1/2+pow(sin(y),2);
 
 c = 1+pow(z,2)/(3-pow(z,2)/5);
 
 s = a/b*c;
 
 cout << "Result h= " << h << endl;
 
return 0;

}

