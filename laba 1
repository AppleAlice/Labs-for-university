2.

#include <iostream.h>

#include <math.h>

int main ()

{

 double x,y,z,a,b,c,s;
 
cout << "Vvedite x: ";

 cin >> x;
 
cout << "Vvedite y: ";

 cin >> y;
 
cout << "Vvedite z: ";

 cin >> z;
 
 a = pow(9+pow(x-y,2));
 
 b = pow(x,2)+pow(y,2)+2;
 
 c = exp(fabs(x-y))*pow(tan(z),3);
 
 s = a/b+c;
 
 cout << "Result h= " << h << endl;
 
return 0;

}

